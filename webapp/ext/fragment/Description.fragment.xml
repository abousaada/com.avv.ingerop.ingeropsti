<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
>
    <l:VerticalLayout
        class="sapUiSmallMargin"
        width="100%"
    >
        <!-- Mission du titulaire -->
        <VBox class="sapUiSmallMarginTop">
            <Text text="Mission du titulaire" />
            <TextArea
                rows="3"
                width="50%"
                id = "txtComment1"
                placeholder="Écrire ici..."
                editable="{ui>/editable}"
                liveChange=".onLiveChangeNotes"
                growing="true"
                value="{comments>/COMM1}"
            />
        </VBox>

        <!-- Données de base -->
        <VBox class="sapUiSmallMarginTop">
            <Text text="Données de base" />
            <TextArea
                rows="3"
                width="50%"
                id="txtComment2"
                placeholder="Écrire ici..."
                editable="{ui>/editable}"
                liveChange=".onLiveChangeNotes"
                growing="true"
                value="{comments>/COMM2}"
            />
        </VBox>

        <!-- Période et délais -->
        <VBox class="sapUiSmallMarginTop">
            <Text text="Période et délais" />
            <TextArea
                rows="3"
                width="50%"
                id="txtComment3"
                placeholder="Écrire ici..."
                editable="{ui>/editable}"
                liveChange=".onLiveChangeNotes"
                growing="true"
                value="{comments>/COMM3}"
            />
        </VBox>

        <!-- Mission sous-traitées -->
        <VBox class="sapUiSmallMarginTop">
            <Text text="Mission sous-traitées" />
            <TextArea
                rows="3"
                width="50%"
                id="txtComment4"
                placeholder="Écrire ici..."
                editable="{ui>/editable}"
                liveChange=".onLiveChangeNotes"
                growing="true"
                value="{comments>/COMM4}"
            />
        </VBox>

        <!-- Gestion des interfaces -->
        <VBox class="sapUiSmallMarginTop">
            <Text text="Gestion des interfaces" />
            <TextArea
                rows="3"
                width="50%"
                id="txtComment5"
                placeholder="Écrire ici..."
                editable="{ui>/editable}"
                liveChange=".onLiveChangeNotes"
                growing="true"
                value="{comments>/COMM5}"
            />
        </VBox>
    </l:VerticalLayout>
</core:FragmentDefinition>
